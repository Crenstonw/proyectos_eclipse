package ejercicio11;

import utilidades.Leer;

public class Principal {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int asignatura=1, suspensos=0, dividendo=6;
		double entradaNota, totalNota=0, media;
		String respuesta, respuestaConvertida;
		
		System.out.println("Bienvenido al programa para saber que notas tienes");
		
		do {
			do {
				System.out.println("Indique la nota de la "+asignatura+" asignatura");
				entradaNota=Leer.datoDouble();
				asignatura++;
				if (entradaNota<=5) {
					suspensos++;
				}
				totalNota=totalNota+entradaNota;
			} while (asignatura<=6);
			
			media=totalNota/dividendo;
			System.out.printf("Su media es de %.2f\n", media);
			System.out.printf("y tiene %d asignaturas suspensas\n\n", suspensos);
			System.out.println("Â¿Quiere volver a repetir? y/n");
			respuesta=Leer.dato();
			respuestaConvertida=respuesta.toLowerCase();
			
		} while (respuestaConvertida!="y");
		
		System.out.println("Gracias por usar el programa");
	}

}
