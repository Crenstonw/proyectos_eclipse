package ejercicio10;

import utilidades.Leer;

public class Principal {

	public static void main(String[] args) {
		/* Escriba un programa al que se le pasen dos números a y b y calcule y muestre la operación ab.
		No se puede usar la función pow () */
		System.out.println("Bienvenido al programa para calcular un número elevado a otro");
		int elevado, numeroA, numeroB, total;
		System.out.println("Introduzca el número base:");
		numeroA=Leer.datoInt();
		System.out.println("Introduzca el número de veces que lo quiere multiplicar:");
		numeroB=Leer.datoInt();
		
		total=numeroA*numeroA;
		numeroB--;
		while (numeroB!=1) {
			total=total*numeroA;
			numeroB--;
		}
		System.out.printf("%d elevado a %d es igual a %d\n",numeroA,numeroB,total);
		System.out.println("Gracias por usar el programa");
	}

}
